/* app.wxss - global styles */
page {
  background-color: #f7f8fa;
  color: #1f2937;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

.container { padding: 16rpx 24rpx; }

.card {
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s ease;
}

.card:active {
  transform: scale(0.99);
}

.card--pad { padding: 24rpx; }

.badge {
  display: inline-flex;
  align-items: center;
  padding: 10rpx 22rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.2s ease;
  line-height: 1;
}

.badge--light { background: rgba(255,255,255,0.92); color: #1f2937; backdrop-filter: blur(8rpx); }
.badge--dark { background: rgba(17,24,39,0.7); color: #f9fafb; backdrop-filter: blur(8rpx); }
.badge--ok { background: rgba(16,185,129,0.15); color: #047857; font-weight: 600; }
.badge--info { background: rgba(59,130,246,0.15); color: #1d4ed8; font-weight: 600; }
.badge--muted { background: rgba(107,114,128,0.15); color: #374151; font-weight: 600; }

.btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 18rpx 36rpx;
  border-radius: 28rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  line-height: 1;
}

.btn:active {
  transform: scale(0.96);
}

.btn--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.btn--secondary {
  background: #f3f4f6;
  color: #4b5563;
  border: 1rpx solid #e5e7eb;
}

.btn--danger {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.btn--danger:active {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
}

.btn--disabled {
  background: #d1d5db !important;
  color: #9ca3af !important;
  cursor: not-allowed;
  opacity: 0.6;
  box-shadow: none !important;
}

.row { display: flex; align-items: center; }
.row-between { display: flex; align-items: center; justify-content: space-between; }
.row-around { display: flex; align-items: center; justify-content: space-around; }
.gap-8 { gap: 8rpx; } .gap-12 { gap: 12rpx; } .gap-16 { gap: 16rpx; } .gap-20 { gap: 20rpx; }

/* 优化后的字体大小系统 - 提升可读性 */
.text-sm { font-size: 26rpx; color: #6b7280; line-height: 1.5; }
.text-md { font-size: 30rpx; color: #374151; line-height: 1.5; }
.text-lg { font-size: 34rpx; color: #111827; font-weight: 500; line-height: 1.4; }
.title { font-size: 38rpx; font-weight: 700; color: #111827; line-height: 1.3; }

.subtitle { font-size: 26rpx; color: #6b7280; line-height: 1.5; }

.mt-8 { margin-top: 8rpx; } .mt-12 { margin-top: 12rpx; } .mt-16 { margin-top: 16rpx; } .mt-24 { margin-top: 24rpx; } .mt-32 { margin-top: 32rpx; }
.mb-8 { margin-bottom: 8rpx; } .mb-12 { margin-bottom: 12rpx; } .mb-16 { margin-bottom: 16rpx; } .mb-24 { margin-bottom: 24rpx; } .mb-32 { margin-bottom: 32rpx; }

.p-16 { padding: 16rpx; }
.p-20 { padding: 20rpx; }
.p-24 { padding: 24rpx; }
.px-24 { padding-left: 24rpx; padding-right: 24rpx; }
.py-24 { padding-top: 24rpx; padding-bottom: 24rpx; }

.tag {
  background: #f3f4f6;
  color: #4b5563;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.tag:active {
  transform: scale(0.96);
}

.tag--active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  border-color: transparent;
}

.banner {
  height: 104rpx;
  padding: 16rpx 20rpx;
  position: relative;
  overflow: hidden;
}

.banner--pink { background: linear-gradient(135deg, #f472b6 0%, #ef4444 100%); }
.banner--blue { background: linear-gradient(135deg, #60a5fa 0%, #6366f1 100%); }
.banner--green { background: linear-gradient(135deg, #34d399 0%, #14b8a6 100%); }
.banner--purple { background: linear-gradient(135deg, #a78bfa 0%, #f472b6 100%); }

.bottom-space { height: 200rpx; }

.scroll-x { white-space: nowrap; }
.chip { display: inline-block; margin-right: 12rpx; }

.hr { height: 1px; background: #e5e7eb; }

.icon-circle { width: 40rpx; height: 40rpx; border-radius: 50%; background: rgba(0,0,0,0.06); display: inline-flex; align-items: center; justify-content: center; font-size: 22rpx; color: #6b7280; }

.progress { width: 100%; height: 8rpx; background: #e5e7eb; border-radius: 9999rpx; overflow: hidden; }
.progress > .bar { height: 100%; background: #3b82f6; border-radius: 9999rpx; }
/* Utility extensions */
.flex { display: flex; }
.flex-col { flex-direction: column; }
.flex-wrap { flex-wrap: wrap; }
.items-center { align-items: center; }
.items-start { align-items: flex-start; }
.items-end { align-items: flex-end; }
.justify-end { justify-content: flex-end; }
.text-center { text-align: center; }
.text-right { text-align: right; }

.text-xs { font-size: 24rpx; color: #6b7280; line-height: 1.5; }
.text-base { font-size: 30rpx; color: #374151; line-height: 1.5; }
.text-xl { font-size: 42rpx; font-weight: 700; color: #111827; line-height: 1.3; }
.text-2xl { font-size: 46rpx; font-weight: 700; color: #111827; line-height: 1.2; }
.text-gray-400 { color: #9ca3af; }
.text-gray-500 { color: #6b7280; }
.text-gray-600 { color: #4b5563; }
.text-gray-800 { color: #1f2937; }
.text-blue-500 { color: #3b82f6; }
.text-green-600 { color: #059669; }
.text-red-500 { color: #ef4444; }
.text-orange-500 { color: #f97316; }

.bg-white { background-color: #ffffff; }
.bg-gray-50 { background-color: #f9fafb; }
.bg-gray-100 { background-color: #f3f4f6; }
.bg-blue-50 { background-color: #eff6ff; }
.bg-green-50 { background-color: #ecfdf5; }
.bg-orange-50 { background-color: #fff7ed; }
.bg-red-50 { background-color: #fef2f2; }

.rounded-xl { border-radius: 20rpx; }
.rounded-2xl { border-radius: 28rpx; }
.shadow-card {
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06), 0 1rpx 4rpx rgba(15, 23, 42, 0.04);
}

.top-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background: #ffffff;
  border-bottom: 1px solid #e5e7eb;
  backdrop-filter: blur(10rpx);
}

.top-bar--fixed {
  position: sticky;
  top: 0;
  z-index: 99;
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.04);
}

.top-bar__group { display: flex; align-items: center; }
.top-bar__group .gap-16:first-child { margin-left: 0; }

.icon-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: #4b5563;
  transition: all 0.3s ease;
  border: 1rpx solid #e5e7eb;
}

.icon-btn:active {
  background: #e5e7eb;
  transform: scale(0.94);
}

.icon-dot {
  position: absolute;
  right: -6rpx;
  top: -6rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background: #ef4444;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
}

.pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  font-size: 26rpx;
  font-weight: 500;
  color: #4b5563;
  background: #f3f4f6;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.pill:active {
  transform: scale(0.96);
}

.pill--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.pill--ghost {
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  border-color: rgba(59, 130, 246, 0.2);
}

.section { margin: 24rpx; }
.section--flush { margin: 24rpx 24rpx 0 24rpx; }
.section--narrow { margin: 0 24rpx; }
.section + .section { margin-top: 0; }

.list-divider { height: 1px; background: #f3f4f6; margin: 12rpx 0; }

.notice-card {
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid transparent;
}

.notice-card--info {
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  color: #1d4ed8;
  border-color: rgba(59, 130, 246, 0.2);
}

.notice-card--muted {
  background: #f9fafb;
  color: #4b5563;
  border-color: #e5e7eb;
}

.badge + .badge { margin-left: 12rpx; }
.btn--small { padding: 14rpx 28rpx; font-size: 26rpx; border-radius: 24rpx; }
