/* pages/statistics/index.wxss */
.filter-strip {
  display: flex;
  gap: 12rpx;
  background: #ffffff;
  padding: 16rpx 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 28rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.pill:active {
  transform: scale(0.96);
}

.pill--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.overview-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.overview-card {
  padding: 24rpx;
  transition: all 0.3s ease;
}

.overview-card:active {
  transform: scale(0.98);
}

.overview-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.overview-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
}

.chart-card { padding: 24rpx; }

.chart-bars {
  display: flex;
  align-items: flex-end;
  justify-content: space-between;
  height: 220rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 24rpx;
  padding: 24rpx;
  gap: 12rpx;
  box-shadow: 0 8rpx 24rpx rgba(118, 75, 162, 0.25);
}

.chart-bar {
  width: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 12rpx 12rpx 0 0;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.source-card { padding: 24rpx; }
.hot-card { padding: 24rpx; }

.hot-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 0;
  border-top: 1px solid #f3f4f6;
  transition: all 0.2s ease;
}

.hot-item:first-child { border-top: none; }

.hot-item:active {
  opacity: 0.7;
}

.hot-thumb {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.share-card { padding: 24rpx; }
.share-btn { width: 100%; text-align: center; }

.share-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-top: 16rpx;
}

.icon-text { font-size: 28rpx; color: #4b5563; }