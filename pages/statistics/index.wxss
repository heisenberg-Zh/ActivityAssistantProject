/* pages/statistics/index.wxss */

/* 时间筛选器 */
.filter-strip {
  display: flex;
  gap: 12rpx;
  background: #ffffff;
  padding: 16rpx 24rpx;
  border-bottom: 1px solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 10;
}

.pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 28rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.pill:active {
  transform: scale(0.96);
}

.pill--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

/* 区块样式 */
.section {
  background: #ffffff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 20rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.stat-card:active {
  transform: scale(0.98);
  background: #f3f4f6;
}

.stat-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.btn:active {
  transform: scale(0.98);
}

.btn--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
}

.btn--secondary {
  background: #f3f4f6;
  color: #4b5563;
  border: 2rpx solid #e5e7eb;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 底部间距 */
.bottom-space {
  height: 40rpx;
}

/* 通用工具类 */
.mb-8 { margin-bottom: 8rpx; }
.mb-12 { margin-bottom: 12rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }

.text-xs { font-size: 22rpx; }
.text-sm { font-size: 26rpx; }
.text-md { font-size: 28rpx; }

.text-gray-500 { color: #6b7280; }
.text-gray-600 { color: #4b5563; }
.text-gray-800 { color: #1f2937; }
.text-green-600 { color: #059669; }

.flex-col {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  align-items: center;
}

.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap-16 { gap: 16rpx; }
