/* pages/statistics/index.wxss */

/* 游客状态容器 */
.guest-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 48rpx;
}

.guest-content {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  max-width: 600rpx;
}

.guest-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.guest-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.guest-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.guest-features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.guest-feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.guest-feature-icon {
  font-size: 32rpx;
}

.guest-feature-text {
  font-size: 26rpx;
  color: #4b5563;
  font-weight: 500;
}

.guest-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  padding: 28rpx 48rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
  transition: all 0.3s ease;
}

.guest-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.guest-login-icon {
  font-size: 32rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.guest-login-text {
  letter-spacing: 1rpx;
}

/* 时间筛选器 */
.filter-strip {
  display: flex;
  gap: 12rpx;
  background: #ffffff;
  padding: 16rpx 24rpx;
  border-bottom: 1px solid #e5e7eb;
  position: sticky;
  top: 0;
  z-index: 10;
}

.pill {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 14rpx 28rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 1rpx solid transparent;
}

.pill:active {
  transform: scale(0.96);
}

.pill--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

/* 区块样式 */
.section {
  background: #ffffff;
  margin: 24rpx;
  padding: 32rpx;
  border-radius: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.header-left {
  display: flex;
  align-items: center;
}

.section-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  letter-spacing: 1rpx;
}

/* 统计卡片网格 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  margin-bottom: 32rpx;
}

.stat-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 28rpx 20rpx;
  background: #f9fafb;
  border-radius: 20rpx;
  transition: all 0.3s ease;
  border: 2rpx solid transparent;
}

.stat-card:active {
  transform: scale(0.98);
  background: #f3f4f6;
}

/* 空状态卡片 */
.stat-card--empty {
  opacity: 0.6;
  border: 2rpx dashed #e5e7eb;
  background: #fafafa;
}

.stat-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 操作按钮 */
.action-buttons {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.btn:active {
  transform: scale(0.98);
}

.btn--primary {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
}

.btn--secondary {
  background: #f3f4f6;
  color: #4b5563;
  border: 2rpx solid #e5e7eb;
}

.btn-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.btn-text {
  font-size: 28rpx;
}

/* 底部间距 */
.bottom-space {
  height: 40rpx;
}

/* 通用工具类 */
.mb-8 { margin-bottom: 8rpx; }
.mb-12 { margin-bottom: 12rpx; }
.mb-16 { margin-bottom: 16rpx; }
.mb-24 { margin-bottom: 24rpx; }

.text-xs { font-size: 22rpx; }
.text-sm { font-size: 26rpx; }
.text-md { font-size: 28rpx; }

.text-gray-500 { color: #6b7280; }
.text-gray-600 { color: #4b5563; }
.text-gray-800 { color: #1f2937; }
.text-green-600 { color: #059669; }

.flex-col {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  align-items: center;
}

.row-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.gap-16 { gap: 16rpx; }

/* 区块提示 */
.section-tip {
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  padding: 20rpx 24rpx;
  background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid #f59e0b;
}

.tip-text {
  font-size: 26rpx;
  color: #92400e;
  line-height: 1.6;
  font-weight: 500;
}
