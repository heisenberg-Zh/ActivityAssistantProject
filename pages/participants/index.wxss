/* pages/participants/index.wxss */

.participants-page {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 顶部信息栏 */
.page-header {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  padding: 32rpx 24rpx 40rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.activity-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.4;
  display: block;
}

.group-name {
  font-size: 28rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, 0.9);
  display: inline-block;
  padding: 8rpx 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 9999rpx;
  align-self: flex-start;
  backdrop-filter: blur(8rpx);
}

.member-count {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

/* 参与者列表 */
.members-list {
  padding: 24rpx 24rpx 0 24rpx;
}

.member-item {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s ease;
}

.member-item:active {
  transform: scale(0.98);
  box-shadow: 0 1rpx 6rpx rgba(15, 23, 42, 0.04);
}

/* 头像 */
.member-avatar-wrapper {
  flex-shrink: 0;
  width: 96rpx;
  height: 96rpx;
  border-radius: 9999rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.member-avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 9999rpx;
}

.member-avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 9999rpx;
}

.avatar-initial {
  font-size: 40rpx;
  font-weight: 600;
  color: #ffffff;
}

/* 成员信息 */
.member-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
  line-height: 1.4;
}

.member-time {
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.5;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.3;
}

.empty-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #4b5563;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.6;
}

.bottom-space {
  height: 40rpx;
}
