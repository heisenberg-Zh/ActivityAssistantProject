/* pages/favorites/index.wxss */
@import '/app.wxss';
@import '/pages/activities/list.wxss';

/* 游客状态容器 */
.guest-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 48rpx;
}

.guest-content {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  max-width: 600rpx;
}

.guest-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.guest-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.guest-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.guest-features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.guest-feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.guest-feature-icon {
  font-size: 32rpx;
}

.guest-feature-text {
  font-size: 26rpx;
  color: #4b5563;
  font-weight: 500;
}

.guest-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  padding: 28rpx 48rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
  transition: all 0.3s ease;
}

.guest-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.guest-login-icon {
  font-size: 32rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.guest-login-text {
  letter-spacing: 1rpx;
}

.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
  display: block;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
  display: block;
}

.empty-hint {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 48rpx;
  display: block;
}

.empty-btn {
  padding: 24rpx 48rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 列表头部 */
.section-header {
  padding: 24rpx 24rpx 16rpx 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #6b7280;
  font-weight: 500;
}

.content-section {
  padding: 0 24rpx;
}
