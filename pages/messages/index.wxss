/* pages/messages/index.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 状态筛选区域 */
.filter-section {
  background: #ffffff;
  padding: 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.filter-scroll-view {
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
  padding-bottom: 8rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1rpx solid transparent;
}

.filter-tab:active {
  transform: scale(0.96);
}

.filter-tab--active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  border-color: transparent;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
}

/* 消息卡片 */
.message-card {
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.message-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
}

.message-body {
  gap: 12rpx;
}

.icon-text {
  font-size: 28rpx;
  color: #4b5563;
}