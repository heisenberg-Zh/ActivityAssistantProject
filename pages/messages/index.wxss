/* pages/messages/index.wxss */

/* 游客状态容器 */
.guest-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 48rpx;
}

.guest-content {
  background: #ffffff;
  border-radius: 32rpx;
  padding: 64rpx 48rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
  width: 100%;
  max-width: 600rpx;
}

.guest-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-12rpx); }
}

.guest-title {
  display: block;
  font-size: 40rpx;
  font-weight: 700;
  color: #111827;
  margin-bottom: 16rpx;
}

.guest-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 48rpx;
  line-height: 1.6;
}

.guest-features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-bottom: 48rpx;
}

.guest-feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  border: 1rpx solid #e5e7eb;
}

.guest-feature-icon {
  font-size: 32rpx;
}

.guest-feature-text {
  font-size: 26rpx;
  color: #4b5563;
  font-weight: 500;
}

.guest-login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  padding: 28rpx 48rpx;
  border-radius: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
  transition: all 0.3s ease;
}

.guest-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.guest-login-icon {
  font-size: 32rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.guest-login-text {
  letter-spacing: 1rpx;
}

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 状态筛选区域 */
.filter-section {
  background: #ffffff;
  padding: 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.filter-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-scroll-view {
  white-space: nowrap;
  flex: 1;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
  padding-bottom: 8rpx;
}

/* 全部已读按钮 */
.mark-all-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 20rpx;
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  font-size: 22rpx;
  font-weight: 500;
  border-radius: 16rpx;
  white-space: nowrap;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.25);
  gap: 4rpx;
}

.mark-all-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.2);
}

.mark-all-btn .icon {
  font-size: 28rpx;
  font-weight: 700;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1rpx solid transparent;
}

.filter-tab:active {
  transform: scale(0.96);
}

.filter-tab--active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  border-color: transparent;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
}

/* 消息卡片 */
.message-card {
  padding: 24rpx;
  margin-bottom: 24rpx;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  cursor: pointer;
}

.message-card:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  opacity: 0.9;
}

.message-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
}

.message-body {
  gap: 12rpx;
}

.icon-text {
  font-size: 28rpx;
  color: #4b5563;
}