/* pages/management/blacklist.wxss */

.blacklist-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #fef2f2 0%, #f7f8fa 100%);
  padding-bottom: 40rpx;
}

/* 信息横幅 */
.info-banner {
  margin: 16rpx 24rpx 20rpx 24rpx;
  padding: 24rpx;
  background: linear-gradient(135deg, #fee2e2 0%, #fecaca 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: flex-start;
  gap: 16rpx;
  border: 2rpx solid rgba(239, 68, 68, 0.2);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.08);
}

.info-banner-icon {
  width: 48rpx;
  height: 48rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 700;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.info-banner-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-banner-title {
  font-size: 28rpx;
  font-weight: 700;
  color: #991b1b;
  line-height: 1.3;
}

.info-banner-desc {
  font-size: 24rpx;
  color: #b91c1c;
  line-height: 1.5;
}

/* 列表容器 */
.list-container {
  padding: 0 24rpx;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

/* 用户卡片 */
.user-card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 2rpx solid transparent;
}

.user-card--blocked {
  border-color: rgba(239, 68, 68, 0.1);
}

.user-card--blocked:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  border-color: #fecaca;
}

.user-card-main {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.user-avatar-wrapper {
  position: relative;
  flex-shrink: 0;
}

.user-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 9999rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.user-avatar--blocked {
  filter: grayscale(50%);
  opacity: 0.8;
}

.user-avatar-placeholder {
  width: 88rpx;
  height: 88rpx;
  border-radius: 9999rpx;
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.user-avatar-placeholder--blocked {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  opacity: 0.9;
}

.user-badge {
  position: absolute;
  bottom: -4rpx;
  right: -4rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.user-badge--danger {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
}

.user-card-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
}

.user-card-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
  line-height: 1.3;
}

.user-card-mobile {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.3;
}

.user-card-reason {
  font-size: 24rpx;
  color: #dc2626;
  padding: 6rpx 12rpx;
  background: #fee2e2;
  border-radius: 8rpx;
  display: inline-block;
  margin-top: 4rpx;
  max-width: fit-content;
}

.user-card-status {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.status-chip {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 6rpx;
}

.status-chip--active {
  background: linear-gradient(135deg, #fef2f2, #fee2e2);
  color: #dc2626;
  border: 2rpx solid #fecaca;
}

.status-chip--disabled {
  background: #f3f4f6;
  color: #9ca3af;
  border: 2rpx solid #e5e7eb;
}

.status-chip--expired {
  background: #fafafa;
  color: #6b7280;
  border: 2rpx solid #e5e7eb;
  text-decoration: line-through;
}

.user-card-actions {
  display: flex;
  gap: 12rpx;
  align-items: center;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 12rpx;
  font-size: 26rpx;
  font-weight: 600;
  transition: all 0.3s ease;
  flex: 1;
  text-align: center;
}

.action-btn--toggle {
  background: linear-gradient(135deg, #fef3c7, #fde68a);
  color: #d97706;
  border: 2rpx solid #fcd34d;
}

.action-btn--toggle:active {
  background: linear-gradient(135deg, #fde68a, #fbbf24);
  transform: scale(0.96);
}

.action-btn--enable {
  background: linear-gradient(135deg, #eff6ff, #dbeafe);
  color: #2563eb;
  border: 2rpx solid #bfdbfe;
}

.action-btn--enable:active {
  background: linear-gradient(135deg, #dbeafe, #93c5fd);
  transform: scale(0.96);
}

.action-icon-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  flex-shrink: 0;
}

.action-icon-btn--danger {
  background: #fef2f2;
  border: 2rpx solid #fecaca;
}

.action-icon-btn--danger:active {
  background: #fee2e2;
  transform: scale(0.9);
}

.action-icon {
  font-size: 40rpx;
  font-weight: 300;
  color: #ef4444;
  line-height: 1;
}

/* 空状态 */
.empty-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 24rpx;
  backdrop-filter: blur(8rpx);
}

.empty-placeholder-icon {
  font-size: 120rpx;
  opacity: 0.3;
  margin-bottom: 24rpx;
  filter: grayscale(100%);
}

.empty-placeholder-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #6b7280;
  margin-bottom: 12rpx;
}

.empty-placeholder-desc {
  font-size: 26rpx;
  color: #9ca3af;
  text-align: center;
  line-height: 1.6;
}

/* 悬浮添加按钮容器 */
.fab-container {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: center;
  z-index: 100;
  pointer-events: none;
}

.fab-button {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 24rpx 48rpx;
  border-radius: 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  pointer-events: auto;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.fab-button--danger {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  box-shadow: 0 8rpx 24rpx rgba(239, 68, 68, 0.4);
}

.fab-button--danger:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.4);
}

.fab-icon {
  font-size: 44rpx;
  font-weight: 300;
  color: #ffffff;
  line-height: 1;
}

.fab-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

/* 对话框相关样式保留原有定义 */
.dialog-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.dialog-content {
  width: 640rpx;
  max-height: 85vh;
  background: #ffffff;
  border-radius: 24rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.dialog-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #e5e7eb;
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
}

.dialog-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 9999rpx;
  background: #f3f4f6;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #6b7280;
}

.dialog-body {
  flex: 1;
  overflow: hidden;
  padding: 24rpx;
}

.dialog-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  border-top: 1rpx solid #e5e7eb;
}

.dialog-footer .btn {
  flex: 1;
}

.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 12rpx;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
}

.input-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 8rpx;
}

.phone-textarea {
  width: 100%;
  min-height: 300rpx;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
  box-sizing: border-box;
}

.phone-textarea:focus {
  border-color: #ef4444;
  background: #ffffff;
}

.toggle-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-top: 1rpx solid #e5e7eb;
  border-bottom: 1rpx solid #e5e7eb;
  margin: 24rpx 0;
}

.toggle-label {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

/* 输入模式 - 批量手机号（与白名单类似，但使用红色主题）*/
.input-mode {
  display: flex;
  flex-direction: column;
  height: 100%;
  max-height: 70vh;
}

.phone-input-container {
  display: flex;
  gap: 16rpx;
  padding: 0 0 16rpx 0;
  flex: 1;
  min-height: 0;
}

.phone-input-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.phone-preview-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  min-width: 0;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 12rpx;
  padding: 0 4rpx;
}

.section-title {
  font-size: 24rpx;
  font-weight: 700;
  color: #374151;
}

.section-hint {
  font-size: 20rpx;
  color: #9ca3af;
}

.remove-duplicates-btn {
  font-size: 22rpx;
  color: #ef4444;
  padding: 6rpx 12rpx;
  background: #fee2e2;
  border-radius: 8rpx;
  font-weight: 600;
}

.remove-duplicates-btn:active {
  background: #fecaca;
}

.phone-textarea {
  flex: 1;
  width: 100%;
  min-height: 300rpx;
  padding: 16rpx;
  background: #fef2f2;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #1f2937;
  line-height: 1.8;
  box-sizing: border-box;
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
}

.phone-textarea:focus {
  border-color: #ef4444;
  background: #ffffff;
}

/* 预览区域 */
.preview-list {
  flex: 1;
  background: #ffffff;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  padding: 12rpx;
  min-height: 300rpx;
}

.preview-group {
  margin-bottom: 16rpx;
}

.preview-group:last-child {
  margin-bottom: 0;
}

.preview-group-title {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 4rpx;
  font-size: 22rpx;
  font-weight: 700;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 9999rpx;
  flex-shrink: 0;
}

.status-dot--danger {
  background: #ef4444;
  box-shadow: 0 0 8rpx rgba(239, 68, 68, 0.5);
}

.status-dot--warning {
  background: #f59e0b;
  box-shadow: 0 0 8rpx rgba(245, 158, 11, 0.5);
}

.status-dot--error {
  background: #dc2626;
  box-shadow: 0 0 8rpx rgba(220, 38, 38, 0.5);
}

.preview-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 10rpx 12rpx;
  border-radius: 8rpx;
  margin-bottom: 6rpx;
  transition: all 0.2s ease;
}

.preview-item:last-child {
  margin-bottom: 0;
}

.preview-item--danger {
  background: linear-gradient(135deg, #fef2f2 0%, #fee2e2 100%);
  border-left: 4rpx solid #ef4444;
}

.preview-item--duplicate {
  background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
  border-left: 4rpx solid #f59e0b;
}

.preview-item--invalid {
  background: linear-gradient(135deg, #fef2f2 0%, #fecaca 100%);
  border-left: 4rpx solid #dc2626;
}

.preview-phone {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
  flex: 1;
}

.preview-tag {
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
  font-size: 20rpx;
  font-weight: 700;
  flex-shrink: 0;
}

.preview-tag--warning {
  background: #fbbf24;
  color: #78350f;
}

.preview-tag--duplicate {
  background: #f59e0b;
  color: #ffffff;
}

.preview-tag--error {
  background: #dc2626;
  color: #ffffff;
}

.preview-empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  min-height: 200rpx;
}

.preview-empty-icon {
  font-size: 80rpx;
  opacity: 0.3;
  margin-bottom: 16rpx;
}

.preview-empty-text {
  font-size: 24rpx;
  color: #9ca3af;
}

/* 底部统计 */
.phone-stats {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 0;
  background: linear-gradient(180deg, #ffffff 0%, #fef2f2 100%);
  border-top: 2rpx solid #fecaca;
  border-bottom: 2rpx solid #fecaca;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
}

.stat-label {
  font-size: 22rpx;
  color: #6b7280;
  font-weight: 500;
}

.stat-value {
  font-size: 36rpx;
  font-weight: 700;
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
}

.stat-value--danger {
  color: #ef4444;
  text-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}

.stat-value--warning {
  color: #f59e0b;
  text-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.3);
}

.stat-value--error {
  color: #dc2626;
  text-shadow: 0 2rpx 8rpx rgba(220, 38, 38, 0.3);
}

.stat-divider {
  width: 2rpx;
  height: 48rpx;
  background: linear-gradient(180deg, rgba(254, 202, 202, 0) 0%, #fecaca 50%, rgba(254, 202, 202, 0) 100%);
}

/* 原因和期限设置区域 */
.settings-section {
  padding: 24rpx;
  background: linear-gradient(135deg, #fef2f2 0%, #ffffff 100%);
  border-radius: 16rpx;
  border: 2rpx solid #fee2e2;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
}

.setting-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.setting-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.setting-label {
  font-size: 30rpx;
  font-weight: 700;
  color: #991b1b;
  line-height: 1.4;
}

.setting-hint {
  font-size: 24rpx;
  color: #9ca3af;
  padding: 6rpx 14rpx;
  background: #f3f4f6;
  border-radius: 10rpx;
  font-weight: 500;
}

.setting-input {
  width: 100%;
  padding: 20rpx;
  background: #ffffff;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1f2937;
  box-sizing: border-box;
}

.setting-input:focus {
  border-color: #ef4444;
  box-shadow: 0 0 0 4rpx rgba(239, 68, 68, 0.1);
}

/* 拉黑原因文本框 */
.reason-textarea {
  width: 100%;
  min-height: 120rpx;
  padding: 24rpx;
  background: #ffffff;
  border: 3rpx solid #fecaca;
  border-radius: 16rpx;
  font-size: 30rpx;
  color: #1f2937;
  line-height: 1.6;
  box-sizing: border-box;
  transition: all 0.3s ease;
}

.reason-textarea:focus {
  border-color: #ef4444;
  background: #fffbfb;
  box-shadow: 0 0 0 6rpx rgba(239, 68, 68, 0.1);
}

/* 期限切换标签 */
.duration-tabs {
  display: flex;
  gap: 12rpx;
}

.duration-tab {
  padding: 8rpx 20rpx;
  background: #ffffff;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 600;
  color: #ef4444;
  transition: all 0.3s ease;
}

.duration-tab--active {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  border-color: #dc2626;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
}

.duration-tab:active {
  transform: scale(0.95);
}

.duration-input-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 12rpx;
}

.duration-input {
  flex: 1;
  padding: 16rpx;
  background: #ffffff;
  border: 2rpx solid #fecaca;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #ef4444;
  text-align: center;
  font-family: 'SF Mono', Monaco, 'Courier New', monospace;
}

.duration-input:focus {
  border-color: #ef4444;
  box-shadow: 0 0 0 4rpx rgba(239, 68, 68, 0.1);
}

.duration-unit {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 600;
  flex-shrink: 0;
}

/* 更新对话框样式 */
.dialog-body {
  flex: 1;
  overflow-y: auto;
  padding: 24rpx;
  max-height: calc(85vh - 200rpx);
}

.btn--danger {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  padding: 20rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 700;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(239, 68, 68, 0.3);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn--danger:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.3);
}
