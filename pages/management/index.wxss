/* pages/management/index.wxss */

.management-page {
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f7f8fa 100%);
  position: relative;
  overflow: hidden;
}

/* 滚动容器 */
.page-scroll {
  position: fixed;
  left: 0;
  right: 0;
  overflow-y: auto;
}

/* ==================== 活动概览卡片 ==================== */
.activity-overview {
  padding: 24rpx 24rpx 24rpx 24rpx;
}

.overview-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

/* 装饰性背景圆点 */
.overview-card::before {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  top: -100rpx;
  right: -50rpx;
}

.overview-card::after {
  content: '';
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  bottom: -75rpx;
  left: -50rpx;
}

/* 顶部信息栏 */
.overview-header {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.overview-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.overview-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  backdrop-filter: blur(8rpx);
  flex-shrink: 0;
}

.status-badge--active {
  background: rgba(16, 185, 129, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.status-badge--upcoming {
  background: rgba(59, 130, 246, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.status-badge--ended {
  background: rgba(107, 114, 128, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(107, 114, 128, 0.3);
}

.overview-role {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.role-icon {
  font-size: 28rpx;
}

.role-label {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* ==================== 统计卡片组 ==================== */
.stats-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-card:active {
  transform: scale(0.96);
}

/* 统计卡片渐变边框效果 */
.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.stat-card--primary::before {
  background: linear-gradient(90deg, #3b82f6, #2563eb);
}

.stat-card--success::before {
  background: linear-gradient(90deg, #10b981, #059669);
}

.stat-card--warning::before {
  background: linear-gradient(90deg, #f59e0b, #d97706);
}

.stat-card--info::before {
  background: linear-gradient(90deg, #8b5cf6, #7c3aed);
}

.stat-card-icon {
  font-size: 48rpx;
  line-height: 1;
}

.stat-card-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-card-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1;
}

.stat-card-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 待审核角标 */
.stat-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.9;
  }
}

/* ==================== 管理功能网格 ==================== */
.management-grid {
  padding: 0 24rpx 24rpx 24rpx;
}

.grid-header {
  margin-bottom: 20rpx;
}

.grid-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.grid-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.function-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(15, 23, 42, 0.12);
}

.function-item:active::before {
  opacity: 1;
}

.function-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.function-icon {
  font-size: 48rpx;
}

.function-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
  line-height: 1.3;
  position: relative;
  z-index: 1;
}

/* 仅创建者可见的徽标 */
.creator-only-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border-radius: 12rpx;
  z-index: 2;
}

.creator-badge-text {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 600;
}

/* ==================== 底部安全区域 ==================== */
.bottom-space {
  height: 40rpx;
}
