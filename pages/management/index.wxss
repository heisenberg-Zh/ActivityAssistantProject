/* pages/management/index.wxss */

.management-page {
  height: 100vh;
  background: linear-gradient(180deg, #f0f4ff 0%, #f7f8fa 100%);
  position: relative;
  overflow: hidden;
}

/* 滚动容器 */
.page-scroll {
  position: fixed;
  left: 0;
  right: 0;
  overflow-y: auto;
}

/* ==================== 活动概览卡片 ==================== */
.activity-overview {
  padding: 24rpx 24rpx 24rpx 24rpx;
}

.overview-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  position: relative;
  overflow: hidden;
}

/* 装饰性背景圆点 */
.overview-card::before {
  content: '';
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  top: -100rpx;
  right: -50rpx;
}

.overview-card::after {
  content: '';
  position: absolute;
  width: 150rpx;
  height: 150rpx;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 50%;
  bottom: -75rpx;
  left: -50rpx;
}

/* 顶部信息栏 */
.overview-header {
  position: relative;
  z-index: 1;
  margin-bottom: 32rpx;
}

.overview-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 16rpx;
  gap: 16rpx;
}

.overview-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 700;
  color: #ffffff;
  line-height: 1.3;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
  backdrop-filter: blur(8rpx);
  flex-shrink: 0;
}

.status-badge--active {
  background: rgba(16, 185, 129, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(16, 185, 129, 0.3);
}

.status-badge--upcoming {
  background: rgba(59, 130, 246, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

.status-badge--ended {
  background: rgba(107, 114, 128, 0.9);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(107, 114, 128, 0.3);
}

.overview-role {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(8rpx);
  border-radius: 16rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.role-icon {
  font-size: 28rpx;
}

.role-label {
  font-size: 24rpx;
  color: #ffffff;
  font-weight: 500;
}

/* ==================== 统计卡片组 ==================== */
.stats-cards {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  position: relative;
  z-index: 1;
}

.stat-card {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.stat-card:active {
  transform: scale(0.96);
}

/* 统计卡片渐变边框效果 */
.stat-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  border-radius: 24rpx 24rpx 0 0;
}

.stat-card--primary::before {
  background: linear-gradient(90deg, #3b82f6, #2563eb);
}

.stat-card--success::before {
  background: linear-gradient(90deg, #10b981, #059669);
}

.stat-card--warning::before {
  background: linear-gradient(90deg, #f59e0b, #d97706);
}

.stat-card--info::before {
  background: linear-gradient(90deg, #8b5cf6, #7c3aed);
}

.stat-card-icon {
  font-size: 48rpx;
  line-height: 1;
}

.stat-card-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
}

.stat-card-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #1f2937;
  line-height: 1;
}

.stat-card-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

/* 待审核角标 */
.stat-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background: linear-gradient(135deg, #ef4444, #dc2626);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: 700;
  color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.9;
  }
}

/* ==================== 评价统计区域 ==================== */
.review-stats-section {
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-top: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  position: relative;
  z-index: 1;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
}

.review-stats-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(251, 191, 36, 0.2);
}

.review-stats-icon {
  font-size: 32rpx;
  line-height: 1;
}

.review-stats-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
}

.review-stats-content {
  display: flex;
  align-items: center;
  justify-content: space-around;
  gap: 16rpx;
}

.review-stat-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.review-stat-label {
  font-size: 24rpx;
  color: #6b7280;
  font-weight: 500;
}

.review-rating-display {
  display: flex;
  align-items: baseline;
  gap: 4rpx;
}

.review-rating-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #f59e0b;
  line-height: 1;
}

.review-rating-suffix {
  font-size: 24rpx;
  color: #9ca3af;
  font-weight: 500;
}

.review-count-value {
  font-size: 44rpx;
  font-weight: 700;
  color: #3b82f6;
  line-height: 1;
}

.review-stat-divider {
  width: 2rpx;
  height: 60rpx;
  background: linear-gradient(180deg, transparent, rgba(209, 213, 219, 0.8), transparent);
}

/* ==================== 管理功能网格 ==================== */
.management-grid {
  padding: 0 24rpx 24rpx 24rpx;
}

.grid-header {
  margin-bottom: 20rpx;
}

.grid-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1f2937;
  display: block;
  margin-bottom: 8rpx;
}

.grid-subtitle {
  font-size: 24rpx;
  color: #6b7280;
  display: block;
}

/* 功能网格 */
.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.function-item {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.function-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.function-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 8rpx 32rpx rgba(15, 23, 42, 0.12);
}

.function-item:active::before {
  opacity: 1;
}

.function-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 1;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.15);
}

.function-icon {
  font-size: 48rpx;
}

.function-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2937;
  text-align: center;
  line-height: 1.3;
  position: relative;
  z-index: 1;
}

/* 仅创建者可见的徽标 */
.creator-only-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  border-radius: 12rpx;
  z-index: 2;
}

.creator-badge-text {
  font-size: 18rpx;
  color: #ffffff;
  font-weight: 600;
}

/* ==================== 底部安全区域 ==================== */
.bottom-space {
  height: 40rpx;
}

/* ==================== 人员列表弹窗 ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx; /* 增加外边距，确保弹窗不会贴边 */
  z-index: 1000;
  animation: fadeIn 0.3s ease;
  box-sizing: border-box; /* 确保padding计算在内 */
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-content {
  width: 100%;
  max-width: 600rpx; /* 进一步减小最大宽度 */
  max-height: 75vh;
  background: #ffffff;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  overflow: hidden; /* 防止内容溢出 */
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.3s ease;
  box-sizing: border-box; /* 确保padding计算在内 */
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.modal-header {
  padding: 28rpx 20rpx; /* 进一步减小padding */
  border-bottom: 1rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-shrink: 0;
  box-sizing: border-box;
}

.modal-title {
  font-size: 30rpx; /* 稍微减小字号 */
  font-weight: 700;
  color: #1f2937;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 12rpx;
}

.modal-close {
  width: 44rpx;
  height: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #6b7280;
  border-radius: 50%;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.modal-close:active {
  background: #f3f4f6;
}

.modal-body {
  flex: 1;
  max-height: 55vh;
  padding: 0; /* 移除scroll-view的padding，改在内部控制 */
  overflow-y: auto;
  overflow-x: hidden;
  box-sizing: border-box;
  width: 100%; /* 确保宽度为100% */
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 20rpx;
  gap: 16rpx;
}

.empty-icon {
  font-size: 96rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #9ca3af;
}

.user-list {
  display: flex;
  flex-direction: column;
  gap: 10rpx; /* 减小间距 */
  padding: 16rpx 20rpx; /* 在这里添加padding，而不是在scroll-view上 */
  box-sizing: border-box;
  width: 100%; /* 确保宽度为100% */
}

.user-item {
  background: #f9fafb;
  border-radius: 14rpx; /* 稍微减小圆角 */
  padding: 16rpx 14rpx; /* 进一步减小padding */
  display: flex;
  align-items: center;
  gap: 10rpx;
  transition: all 0.2s ease;
  box-sizing: border-box; /* 关键：确保padding计算在内 */
  overflow: hidden;
  width: 100%; /* 确保宽度不超过父容器 */
}

.user-item:active {
  background: #f3f4f6;
}

.user-info {
  flex: 1;
  min-width: 0; /* 关键：允许 flex 子元素收缩 */
  display: flex;
  flex-direction: column;
  gap: 4rpx; /* 减小间距 */
  overflow: hidden;
}

.user-name {
  font-size: 26rpx; /* 减小字号 */
  font-weight: 600;
  color: #1f2937;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

.user-id {
  font-size: 20rpx; /* 进一步减小字号 */
  color: #9ca3af;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.3;
}

.user-role-tag,
.user-status-tag {
  padding: 4rpx 10rpx; /* 进一步减小padding */
  border-radius: 10rpx;
  font-size: 18rpx; /* 进一步减小字号 */
  font-weight: 600;
  flex-shrink: 0;
  white-space: nowrap;
  line-height: 1.3;
}

.user-role-tag {
  background: linear-gradient(135deg, #fbbf24, #f59e0b);
  color: #ffffff;
}

.user-status-tag {
  color: #ffffff;
}

.user-status-approved {
  background: linear-gradient(135deg, #10b981, #059669);
}

.user-status-pending {
  background: linear-gradient(135deg, #f59e0b, #d97706);
}

.user-status-rejected {
  background: linear-gradient(135deg, #ef4444, #dc2626);
}

.modal-footer {
  padding: 18rpx 20rpx; /* 减小padding */
  border-top: 1rpx solid #e5e7eb;
  flex-shrink: 0;
  box-sizing: border-box;
}

.modal-btn {
  width: 100%;
  height: 80rpx; /* 稍微减小高度 */
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  border-radius: 14rpx;
  color: #ffffff;
  font-size: 26rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
  transition: all 0.2s ease;
}

.modal-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}
