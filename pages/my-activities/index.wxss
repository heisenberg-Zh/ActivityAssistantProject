/* pages/my-activities/index.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 状态筛选区域 */
.filter-section {
  background: #ffffff;
  padding: 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.filter-scroll-view {
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
  padding-bottom: 8rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1rpx solid transparent;
}

.filter-tab:active {
  transform: scale(0.96);
}

.filter-tab--active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  border-color: transparent;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
}

/* 活动卡片 */
.my-card {
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.my-card__header {
  margin-bottom: 16rpx;
}

.my-card__body {
  display: flex;
  flex-direction: column;
}

/* 按钮样式 */
.btn--small {
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border-radius: 24rpx;
}

.icon-text {
  font-size: 28rpx;
  color: #4b5563;
}

/* ===== 评价弹窗 ===== */
.review-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
}

.review-modal--show {
  opacity: 1;
  pointer-events: auto;
}

.review-modal__content {
  width: 92%;
  max-width: 640rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.2);
  transform: scale(0.9);
  transition: transform 0.3s ease;
  max-height: 80vh;
  overflow-y: auto;
}

.review-modal--show .review-modal__content {
  transform: scale(1);
}

/* 弹窗头部 */
.review-modal__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #F3F4F6;
}

.review-modal__title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
}

.review-modal__close {
  width: 56rpx;
  height: 56rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #F3F4F6;
  border-radius: 50%;
  transition: all 0.2s;
}

.review-modal__close:active {
  background: #E5E7EB;
  transform: scale(0.95);
}

.review-modal__close-icon {
  font-size: 32rpx;
  color: #6B7280;
  line-height: 1;
}

/* 活动名称 */
.review-modal__activity {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #EFF6FF 0%, #F9FAFB 100%);
  border-radius: 16rpx;
  margin-bottom: 32rpx;
}

.review-modal__activity-label {
  font-size: 24rpx;
  color: #6B7280;
}

.review-modal__activity-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F2937;
  line-height: 1.5;
}

/* 评分区域 */
.review-modal__rating-section {
  margin-bottom: 32rpx;
}

.review-modal__section-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 20rpx;
}

.review-stars {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.star-item {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 80rpx;
  height: 80rpx;
  transition: transform 0.2s ease;
}

.star-item:active {
  transform: scale(1.2);
}

.star-icon {
  font-size: 72rpx;
  line-height: 1;
  transition: all 0.2s ease;
}

.star-empty {
  color: #E5E7EB;
}

.star-filled {
  color: #FBBF24;
  text-shadow: 0 2rpx 8rpx rgba(251, 191, 36, 0.3);
}

.review-rating-text {
  display: block;
  text-align: center;
  font-size: 26rpx;
  color: #6B7280;
  margin-top: 8rpx;
}

/* 文字评价区域 */
.review-modal__text-section {
  margin-bottom: 32rpx;
}

.review-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 20rpx;
  background: #F9FAFB;
  border: 2rpx solid #E5E7EB;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1F2937;
  line-height: 1.6;
  box-sizing: border-box;
  transition: all 0.2s;
}

.review-textarea:focus {
  background: #FFFFFF;
  border-color: #3B82F6;
}

.review-textarea-placeholder {
  color: #9CA3AF;
}

.review-textarea-counter {
  display: flex;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.counter-text {
  font-size: 24rpx;
  color: #9CA3AF;
}

/* 操作按钮 */
.review-modal__actions {
  display: flex;
  gap: 16rpx;
}

.review-cancel-btn,
.review-submit-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  transition: all 0.2s;
}

.review-cancel-btn::after,
.review-submit-btn::after {
  border: none;
}

.review-cancel-btn {
  background: #F3F4F6;
  color: #6B7280;
}

.review-cancel-btn:active {
  background: #E5E7EB;
}

.review-submit-btn {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.review-submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.3);
}