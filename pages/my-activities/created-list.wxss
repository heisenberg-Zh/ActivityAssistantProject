/* pages/my-activities/created-list.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 48rpx;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #374151;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #9ca3af;
  margin-bottom: 48rpx;
}

.empty-btn {
  padding: 20rpx 48rpx;
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  border-radius: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
}

.empty-btn:active {
  opacity: 0.8;
}

/* 活动列表 */
.activity-list {
  padding: 24rpx;
}

.activity-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  transition: all 0.3s ease;
}

.activity-item:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.activity-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.activity-title {
  flex: 1;
  font-size: 30rpx;
  font-weight: 600;
  color: #111827;
  line-height: 1.5;
  margin-right: 16rpx;
}

/* 状态徽章 */
.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 22rpx;
  font-weight: 500;
  white-space: nowrap;
}

.status-ongoing {
  background: #dbeafe;
  color: #1d4ed8;
}

.status-upcoming {
  background: #dcfce7;
  color: #047857;
}

.status-ended {
  background: #f3f4f6;
  color: #6b7280;
}

/* 元信息 */
.activity-meta {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-item {
  display: flex;
  align-items: center;
}

.meta-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.meta-text {
  font-size: 26rpx;
  color: #6b7280;
}
