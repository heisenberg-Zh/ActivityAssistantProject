/* pages/agreement/index.wxss */
.agreement-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e8eef5 100%);
  padding-bottom: 120rpx;
}

.agreement-header {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(59, 130, 246, 0.2);
}

.agreement-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.update-date,
.effective-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

.agreement-content {
  max-height: calc(100vh - 280rpx);
  padding: 40rpx 32rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #3b82f6;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.paragraph {
  display: block;
  font-size: 26rpx;
  line-height: 44rpx;
  color: #4b5563;
  margin-bottom: 16rpx;
  text-align: justify;
}

.paragraph.highlight {
  background: #eff6ff;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #3b82f6;
  color: #1e40af;
  font-weight: 500;
}

.list-item {
  display: block;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #4b5563;
  margin-bottom: 12rpx;
  padding-left: 12rpx;
}

.list-item.warning {
  color: #dc2626;
}

.footer {
  margin-top: 40rpx;
  padding: 32rpx;
  text-align: center;
  background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
  border-radius: 16rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.agreement-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-back {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.btn-back::after {
  border: none;
}
