<!-- pages/auth/login.wxml -->
<view class="login-container">
  <!-- 返回按钮（固定在屏幕左上角） -->
  <view class="back-button" bindtap="goBack">
    <text class="back-arrow">←</text>
  </view>

  <!-- 顶部装饰球 -->
  <view class="decoration-sphere decoration-sphere--top"></view>
  <view class="decoration-sphere decoration-sphere--bottom"></view>

  <view class="login-content">
    <!-- Logo区域 -->
    <view class="logo-section">
      <view class="logo-wrapper">
        <view class="logo-icon">📅</view>
        <view class="logo-glow"></view>
      </view>
      <text class="app-name">活动助手</text>
      <text class="app-slogan">让每一场活动都精彩</text>
    </view>

    <!-- 功能亮点 -->
    <view class="features-grid">
      <view class="feature-card">
        <view class="feature-icon-wrapper">
          <text class="feature-icon">✨</text>
        </view>
        <text class="feature-title">轻松创建</text>
        <text class="feature-desc">快速发起活动</text>
      </view>
      <view class="feature-card">
        <view class="feature-icon-wrapper">
          <text class="feature-icon">👥</text>
        </view>
        <text class="feature-title">智能管理</text>
        <text class="feature-desc">报名签到一体化</text>
      </view>
      <view class="feature-card">
        <view class="feature-icon-wrapper">
          <text class="feature-icon">📊</text>
        </view>
        <text class="feature-title">实时统计</text>
        <text class="feature-desc">数据一目了然</text>
      </view>
    </view>

    <!-- 登录按钮 -->
    <view class="login-action">
      <button class="login-btn" bindtap="handleLogin" disabled="{{!canLogin}}">
        <view class="btn-shine"></view>
        <view class="btn-content">
          <text class="wechat-icon">💬</text>
          <text class="btn-text">{{canLogin ? '微信授权登录' : '登录中...'}}</text>
        </view>
      </button>

      <text class="privacy-text">登录即表示同意</text>
      <view class="privacy-links">
        <text class="privacy-link" bindtap="viewAgreement">《用户协议》</text>
        <text class="privacy-separator">和</text>
        <text class="privacy-link" bindtap="viewPolicy">《隐私政策》</text>
      </view>
    </view>
  </view>
</view>
