/* pages/auth/login.wxss */

/* ==================== 基础容器 ==================== */
.login-container {
  min-height: 100vh;
  background: linear-gradient(160deg, #667eea 0%, #764ba2 50%, #f093fb 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

/* 装饰球 - 增加视觉层次 */
.decoration-sphere {
  position: absolute;
  border-radius: 50%;
  opacity: 0.15;
  filter: blur(60rpx);
  pointer-events: none;
}

.decoration-sphere--top {
  width: 600rpx;
  height: 600rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.8) 0%, transparent 70%);
  top: -200rpx;
  right: -100rpx;
  animation: float-sphere-1 20s ease-in-out infinite;
}

.decoration-sphere--bottom {
  width: 500rpx;
  height: 500rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.6) 0%, transparent 70%);
  bottom: -150rpx;
  left: -100rpx;
  animation: float-sphere-2 18s ease-in-out infinite;
}

@keyframes float-sphere-1 {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(-30rpx, 30rpx); }
}

@keyframes float-sphere-2 {
  0%, 100% { transform: translate(0, 0); }
  50% { transform: translate(30rpx, -30rpx); }
}

/* ==================== 返回按钮（重新设计） ==================== */
.back-button {
  position: fixed;
  top: 40rpx;
  left: 32rpx;
  z-index: 1000;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  backdrop-filter: blur(20rpx);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.back-button:active {
  transform: scale(0.92);
  background: rgba(255, 255, 255, 0.35);
}

.back-arrow {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  line-height: 1;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* ==================== 内容区域 ==================== */
.login-content {
  width: 100%;
  padding: 80rpx 48rpx 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

/* ==================== Logo区域 ==================== */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo-wrapper {
  position: relative;
  margin-bottom: 48rpx;
}

.logo-icon {
  font-size: 140rpx;
  position: relative;
  z-index: 2;
  animation: float-logo 3s ease-in-out infinite;
}

@keyframes float-logo {
  0%, 100% { transform: translateY(0) scale(1); }
  50% { transform: translateY(-16rpx) scale(1.05); }
}

.logo-glow {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
  border-radius: 50%;
  filter: blur(40rpx);
  animation: glow-pulse 3s ease-in-out infinite;
}

@keyframes glow-pulse {
  0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
  50% { opacity: 0.8; transform: translate(-50%, -50%) scale(1.1); }
}

.app-name {
  font-size: 56rpx;
  font-weight: 800;
  color: #ffffff;
  margin-bottom: 20rpx;
  letter-spacing: 6rpx;
  text-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.app-slogan {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  letter-spacing: 3rpx;
  font-weight: 400;
}

/* ==================== 功能网格 ==================== */
.features-grid {
  width: 100%;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 14rpx;
  margin-bottom: 100rpx;
  padding: 0 28rpx;
}

.feature-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  background: rgba(255, 255, 255, 0.12);
  border-radius: 18rpx;
  backdrop-filter: blur(20rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.feature-card:active {
  transform: translateY(-4rpx);
  background: rgba(255, 255, 255, 0.18);
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.15);
}

.feature-icon-wrapper {
  width: 64rpx;
  height: 64rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  margin-bottom: 10rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.feature-icon {
  font-size: 34rpx;
}

.feature-title {
  font-size: 23rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 5rpx;
  letter-spacing: 0.5rpx;
}

.feature-desc {
  font-size: 19rpx;
  color: rgba(255, 255, 255, 0.8);
  text-align: center;
  line-height: 1.3;
}

/* ==================== 登录操作区 ==================== */
.login-action {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
}

.login-btn {
  width: 100%;
  max-width: 560rpx;
  height: 96rpx;
  background: #ffffff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.18);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: none;
  padding: 0;
  position: relative;
  overflow: hidden;
  margin-bottom: 32rpx;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.97);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

/* 按钮光效 */
.btn-shine {
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg,
    transparent 0%,
    rgba(255, 255, 255, 0.3) 50%,
    transparent 100%);
  animation: shine 3s ease-in-out infinite;
}

@keyframes shine {
  0% { left: -100%; }
  20%, 100% { left: 100%; }
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #667eea;
  letter-spacing: 2rpx;
}

/* ==================== 隐私协议 ==================== */
.privacy-text {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
  margin-bottom: 8rpx;
}

.privacy-links {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.privacy-link {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.9);
  text-decoration: underline;
  font-weight: 500;
}

.privacy-separator {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.75);
}
