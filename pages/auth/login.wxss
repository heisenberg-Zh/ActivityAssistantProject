/* pages/auth/login.wxss */
/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 60rpx;
  left: 32rpx;
  z-index: 100;
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 48rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.4);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.back-btn:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.35);
}

.back-icon {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  line-height: 1;
}

.back-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 600;
  letter-spacing: 1rpx;
}

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.login-content {
  width: 100%;
  padding: 60rpx 48rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
  z-index: 2;
}

/* Logo区域 */
.logo-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo-icon {
  font-size: 120rpx;
  margin-bottom: 32rpx;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% { transform: translateY(0); }
  50% { transform: translateY(-20rpx); }
}

.app-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 16rpx;
  letter-spacing: 4rpx;
}

.app-slogan {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
  letter-spacing: 2rpx;
}

/* 功能介绍 */
.feature-list {
  width: 100%;
  margin-bottom: 100rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255, 255, 255, 0.25);
}

.feature-icon {
  font-size: 40rpx;
  margin-right: 24rpx;
}

.feature-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* 登录操作区 */
.login-action {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 开发模式登录按钮 */
.dev-login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(245, 158, 11, 0.4);
  transition: all 0.3s ease;
  border: none;
  padding: 0;
  margin-bottom: 24rpx;
}

.dev-login-btn::after {
  border: none;
}

.dev-login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(245, 158, 11, 0.3);
}

.dev-login-btn .btn-text {
  color: #ffffff;
}

.dev-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

/* 微信授权登录按钮 */
.login-btn {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  border: none;
  padding: 0;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.btn-content {
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  font-size: 36rpx;
  margin-right: 16rpx;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #667eea;
  letter-spacing: 2rpx;
}

.privacy-tips {
  margin-top: 32rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
  text-align: center;
  line-height: 1.6;
}

/* 温馨提示 */
.login-tip {
  margin-top: 40rpx;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
}

.tip-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  text-align: center;
  display: block;
}

/* 底部装饰 */
.bottom-decoration {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  background: radial-gradient(ellipse at bottom, rgba(255, 255, 255, 0.1) 0%, transparent 70%);
  z-index: 1;
}
