/* pages/activities/list.wxss */
.search-section {
  background: #ffffff;
  padding: 16rpx 24rpx 24rpx 24rpx;
  border-bottom: none;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 9999rpx;
  padding: 12rpx 24rpx;
}

.search-icon { font-size: 24rpx; color: #6b7280; margin-right: 12rpx; }
.search-input { flex: 1; font-size: 26rpx; color: #374151; background: transparent; border: none; }

.filter-strip {
  background: #ffffff;
  padding: 24rpx 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.filter-scroll {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.filter-scroll .chip {
  margin-right: 0;
}

.filter-scroll .pill {
  font-size: 26rpx;
  padding: 14rpx 28rpx;
  font-weight: 500;
  transition: all 0.3s ease;
  white-space: nowrap;
}

.filter-scroll .pill--primary {
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.activity-card { padding: 24rpx; margin-bottom: 24rpx; }
.activity-card__header { margin-bottom: 16rpx; }
.activity-card__body { display: flex; flex-direction: column; }

.btn--small { padding: 12rpx 24rpx; font-size: 24rpx; border-radius: 24rpx; }
.icon-text { font-size: 28rpx; color: #4b5563; }