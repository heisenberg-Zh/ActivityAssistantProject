/* pages/activities/list.wxss */

/* 页面容器 */
.page-container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

/* 头部区域（搜索+筛选） */
.header-section {
  background: #ffffff;
  position: relative;
  z-index: 10;
}

/* 搜索区域 */
.search-section {
  background: #ffffff;
  padding: 24rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #f3f4f6;
  border-radius: 9999rpx;
  padding: 14rpx 24rpx;
  height: 68rpx;
}

.search-icon {
  font-size: 24rpx;
  color: #6b7280;
  margin-right: 12rpx;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #374151;
  background: transparent;
  border: none;
}

/* 状态筛选区域 */
.filter-section {
  background: #ffffff;
  padding: 0 24rpx 24rpx 24rpx;
  border-bottom: 1px solid #e5e7eb;
}

.filter-scroll-view {
  white-space: nowrap;
}

.filter-tabs {
  display: inline-flex;
  gap: 12rpx;
  padding-bottom: 8rpx;
}

.filter-tab {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx 24rpx;
  background: #f3f4f6;
  color: #4b5563;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 24rpx;
  transition: all 0.3s ease;
  white-space: nowrap;
  border: 1rpx solid transparent;
}

.filter-tab:active {
  transform: scale(0.96);
}

.filter-tab--active {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
  border-color: transparent;
}

/* 内容区域 */
.content-section {
  flex: 1;
  padding: 24rpx;
  padding-bottom: 0;
}

/* 活动卡片 */
.activity-card {
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.activity-card__header {
  margin-bottom: 16rpx;
}

.activity-card__body {
  display: flex;
  flex-direction: column;
}

/* 按钮样式 - 使用全局样式 */

/* 已报名状态 - 绿色 */
.btn--registered {
  background: linear-gradient(135deg, #10b981, #059669);
  color: #ffffff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.25);
}

.btn--registered:active {
  background: linear-gradient(135deg, #059669, #047857);
  transform: scale(0.96);
}

/* 待审核状态 - 黄色 */
.btn--pending {
  background: linear-gradient(135deg, #f59e0b, #d97706);
  color: #ffffff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(245, 158, 11, 0.25);
}

.btn--pending:active {
  background: linear-gradient(135deg, #d97706, #b45309);
  transform: scale(0.96);
}

/* 已拒绝状态 - 红色 */
.btn--rejected {
  background: linear-gradient(135deg, #ef4444, #dc2626);
  color: #ffffff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.25);
}

.btn--rejected:active {
  background: linear-gradient(135deg, #dc2626, #b91c1c);
  transform: scale(0.96);
}

/* 禁用状态 - 灰色（已满、已截止等） */
.btn--disabled {
  background: #e5e7eb;
  color: #9ca3af;
  border: 1rpx solid #d1d5db;
  box-shadow: none;
  cursor: not-allowed;
}

.btn--disabled:active {
  transform: none;
  background: #e5e7eb;
}

.icon-text {
  font-size: 28rpx;
  color: #4b5563;
}