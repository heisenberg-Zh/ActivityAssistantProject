.contact-icon--phone::after {
  content: '';
  position: absolute;
  width: 8rpx;
  height: 2rpx;
  background: #ffffff;
  border-radius: 2rpx;
  bottom: 12rpx;
  left: 50%;
  transform: translateX(-50%);
