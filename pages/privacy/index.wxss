.privacy-container {
  min-height: 100vh;
  padding: 48rpx;
  background: #f3f4f6;
  box-sizing: border-box;
}

.privacy-content {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(15, 23, 42, 0.08);
}

.privacy-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  text-align: center;
  margin-bottom: 24rpx;
}

.privacy-section {
  margin-bottom: 32rpx;
}

.privacy-text {
  display: block;
  color: #4b5563;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

.privacy-item {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1px solid #f3f4f6;
}

.privacy-item:last-child {
  border-bottom: none;
}

.privacy-item-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.privacy-item-content {
  flex: 1;
}

.privacy-item-title {
  display: block;
  font-size: 30rpx;
  font-weight: 500;
  color: #1f2937;
  margin-bottom: 6rpx;
}

.privacy-item-desc {
  font-size: 26rpx;
  color: #6b7280;
}

.privacy-hint {
  display: block;
  font-size: 26rpx;
  color: #4b5563;
  margin-bottom: 6rpx;
}

.privacy-agree-btn,
.privacy-disagree-btn,
.privacy-view-btn {
  width: 100%;
  border-radius: 16rpx;
  font-size: 30rpx;
  padding: 24rpx 0;
}

.privacy-agree-btn {
  background: #3b82f6;
  color: #ffffff;
  margin-top: 8rpx;
}

.privacy-disagree-btn {
  margin-top: 16rpx;
  border: 2rpx solid #d1d5db;
  color: #374151;
  background: #ffffff;
}

.privacy-view-btn {
  margin-top: 16rpx;
  color: #2563eb;
  background: transparent;
  border: none;
}
