/* Quick action modules */
.quick-actions { margin-bottom: 32rpx; }
.quick-grid { display: flex; gap: 24rpx; }
.quick-grid--two { justify-content: center; }

.quick-card {
  flex: 1;
  background: #ffffff;
  border-radius: 32rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(15, 23, 42, 0.06), 0 1rpx 4rpx rgba(15, 23, 42, 0.04);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border: 1rpx solid rgba(229, 231, 235, 0.6);
}

.quick-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(15, 23, 42, 0.08);
}

.quick-title {
  margin-top: 24rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  display: block;
}

.quick-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.5;
  display: block;
}

.quick-icon {
  position: relative;
  width: 120rpx;
  height: 120rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

.quick-icon--blue { background: linear-gradient(135deg, #eef2ff 0%, #dbeafe 100%); }
.quick-icon--green { background: linear-gradient(135deg, #ecfdf5 0%, #d1fae5 100%); }
.quick-icon--purple { background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%); }

.quick-icon-plus {
  position: absolute;
  background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(79, 70, 229, 0.3);
}

.quick-icon-plus--vertical { width: 16rpx; height: 72rpx; }
.quick-icon-plus--horizontal { width: 72rpx; height: 16rpx; }

.quick-icon-list { display: flex; flex-direction: column; align-items: flex-start; width: 72rpx; }

.quick-icon-list-bar {
  height: 12rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
  margin-bottom: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(16, 185, 129, 0.25);
}

.quick-icon-list-bar:last-child { margin-bottom: 0; }

.quick-icon-copy { position: relative; width: 72rpx; height: 72rpx; }

.quick-icon-copy-rect {
  position: absolute;
  width: 48rpx;
  height: 48rpx;
  border-radius: 12rpx;
  border: 4rpx solid #8b5cf6;
}

.quick-icon-copy-rect--back {
  top: 0;
  left: 0;
  background: rgba(139, 92, 246, 0.1);
}

.quick-icon-copy-rect--front {
  top: 18rpx;
  left: 18rpx;
  background: linear-gradient(135deg, #a78bfa 0%, #8b5cf6 100%);
  box-shadow: 0 4rpx 12rpx rgba(139, 92, 246, 0.3);
}

.home-hero {
  padding: 48rpx 32rpx 40rpx 32rpx;
  background: linear-gradient(135deg, #4f46e5 0%, #7c3aed 100%);
  color: #ffffff;
  border-bottom-left-radius: 32rpx;
  border-bottom-right-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(79, 70, 229, 0.35);
  position: relative;
  overflow: hidden;
}

.home-hero::before {
  content: '';
  position: absolute;
  top: -50%;
  right: -20%;
  width: 400rpx;
  height: 400rpx;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.15) 0%, transparent 70%);
  border-radius: 50%;
}

.home-banner {
  width: 560rpx;
  height: 320rpx;
  border-radius: 32rpx;
  overflow: hidden;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
  position: relative;
}

/* 首页轮播图标签样式 */
.home-type-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8rpx);
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  z-index: 3;
}

.home-status-badge {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 12rpx 24rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 3;
  backdrop-filter: blur(8rpx);
}

/* 状态颜色 */
.home-status-badge--registering {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.home-status-badge--ongoing {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.home-status-badge--ended {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
}

.home-status-badge--cancelled {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.home-status-badge--full {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.home-badge-text {
  font-size: 24rpx;
  font-weight: 600;
  color: #1f2937;
}

.home-badge-text-white {
  font-size: 24rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

/* 轮播图信息区域 */
.home-banner-info {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  z-index: 2;
}

.home-banner-title {
  display: block;
  font-size: 32rpx;
  font-weight: 700;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  line-height: 1.4;
}

.home-banner-meta {
  display: flex;
  align-items: center;
}

.home-banner-meta-text {
  font-size: 26rpx;
  color: #eef2ff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 使用全局的 btn--small 样式 */
.icon-text { font-size: 28rpx; color: #ffffff; }

.icon-btn--hero {
  background: rgba(255, 255, 255, 0.16);
  border: 1rpx solid rgba(255, 255, 255, 0.45);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(15, 23, 42, 0.15);
  backdrop-filter: blur(8rpx);
}

.icon-btn--hero .icon-text { color: #ffffff; }

/* 活动图片样式 */
.banner-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
}

.banner-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(180deg, rgba(0, 0, 0, 0.25) 0%, rgba(0, 0, 0, 0.45) 100%);
  z-index: 1;
}

.banner-container {
  position: relative;
  width: 100%;
  height: 180rpx;  /* 从260rpx减小到180rpx（约70%高度） */
  border-top-left-radius: 32rpx;
  border-top-right-radius: 32rpx;
  overflow: hidden;
}

/* 活动列表标签样式 */
.list-type-badge {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(8rpx);
  padding: 10rpx 20rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.12);
  z-index: 3;
}

.list-status-badge {
  position: absolute;
  top: 16rpx;
  left: 16rpx;
  padding: 10rpx 20rpx;
  border-radius: 9999rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  z-index: 3;
  backdrop-filter: blur(8rpx);
}

/* 列表状态颜色 */
.list-status-badge--registering {
  background: linear-gradient(135deg, #10b981 0%, #059669 100%);
}

.list-status-badge--ongoing {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
}

.list-status-badge--ended {
  background: linear-gradient(135deg, #6b7280 0%, #4b5563 100%);
}

.list-status-badge--cancelled {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
}

.list-status-badge--full {
  background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
}

.list-badge-text {
  font-size: 22rpx;
  font-weight: 600;
  color: #1f2937;
}

.list-badge-text-white {
  font-size: 22rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}

/* 活动编号标签 - 右下角（无背景框） */
.activity-id-badge {
  position: absolute;
  bottom: 12rpx;
  right: 12rpx;
  z-index: 3;
}

.activity-id-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.5rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.8), 0 0 4rpx rgba(0, 0, 0, 0.6);
}

/* 创建人昵称标签 - 左下角（无背景框） */
.organizer-badge {
  position: absolute;
  bottom: 12rpx;
  left: 12rpx;
  z-index: 3;
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.organizer-text {
  font-size: 20rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 0.5rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.8), 0 0 4rpx rgba(0, 0, 0, 0.6);
}
