/* Quick action modules */
.quick-actions { margin-bottom: 32rpx; }
.quick-grid { display: flex; }
.quick-card { flex: 1; background: #ffffff; border-radius: 32rpx; padding: 32rpx 24rpx; text-align: center; box-shadow: 0 12rpx 48rpx rgba(15, 23, 42, 0.08); transition: transform 0.15s ease; }
.quick-card + .quick-card { margin-left: 24rpx; }
.quick-card:active { transform: scale(0.98); }
.quick-title { margin-top: 24rpx; font-size: 32rpx; font-weight: 600; color: #111827; }
.quick-desc { margin-top: 12rpx; font-size: 24rpx; color: #6b7280; }

.quick-icon { position: relative; width: 120rpx; height: 120rpx; border-radius: 9999rpx; display: flex; align-items: center; justify-content: center; margin: 0 auto; }
.quick-icon--blue { background: #eef2ff; }
.quick-icon--green { background: #ecfdf5; }

.quick-icon-plus { position: absolute; background: #4f46e5; border-radius: 9999rpx; }
.quick-icon-plus--vertical { width: 16rpx; height: 72rpx; }
.quick-icon-plus--horizontal { width: 72rpx; height: 16rpx; }

.quick-icon-list { display: flex; flex-direction: column; align-items: flex-start; width: 72rpx; }
.quick-icon-list-bar { height: 12rpx; border-radius: 9999rpx; background: #10b981; margin-bottom: 12rpx; }
.quick-icon-list-bar:last-child { margin-bottom: 0; }

.home-hero { padding: 40rpx 32rpx; background: linear-gradient(135deg,#4f46e5,#7c3aed); color: #ffffff; border-bottom-left-radius: 32rpx; border-bottom-right-radius: 32rpx; box-shadow: 0 12rpx 48rpx rgba(79,70,229,0.4); }
.home-banner { width: 560rpx; height: 320rpx; border-radius: 32rpx; overflow: hidden; }
.btn--small { padding: 12rpx 24rpx; font-size: 24rpx; border-radius: 24rpx; }
.icon-text { font-size: 28rpx; color: #ffffff; }

.icon-btn--hero { background: rgba(255,255,255,0.16); border: 1rpx solid rgba(255,255,255,0.45); color: #ffffff; box-shadow: 0 6rpx 20rpx rgba(15,23,42,0.15); }
.icon-btn--hero .icon-text { color: #ffffff; }
