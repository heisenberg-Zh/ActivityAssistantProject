/* pages/policy/index.wxss */
.policy-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%);
  padding-bottom: 120rpx;
}

.policy-header {
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  padding: 60rpx 40rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(139, 92, 246, 0.2);
}

.policy-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.update-date,
.effective-date {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
  margin-top: 8rpx;
}

.policy-content {
  max-height: calc(100vh - 280rpx);
  padding: 40rpx 32rpx;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #1f2937;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 3rpx solid #8b5cf6;
}

.sub-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #374151;
  margin-top: 24rpx;
  margin-bottom: 16rpx;
}

.paragraph {
  display: block;
  font-size: 26rpx;
  line-height: 44rpx;
  color: #4b5563;
  margin-bottom: 16rpx;
  text-align: justify;
}

.paragraph.highlight {
  background: #fef3c7;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #f59e0b;
  color: #92400e;
  font-weight: 500;
}

.paragraph.bold {
  font-weight: 600;
  color: #374151;
  margin-top: 16rpx;
}

.paragraph.important {
  background: #fee2e2;
  padding: 16rpx 20rpx;
  border-radius: 8rpx;
  border-left: 4rpx solid #ef4444;
  color: #991b1b;
  font-weight: 500;
}

.list-item {
  display: block;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #4b5563;
  margin-bottom: 12rpx;
  padding-left: 12rpx;
}

.list-item.important {
  color: #7c3aed;
  font-weight: 500;
}

.list-item.warning {
  color: #dc2626;
}

.list-item.sub {
  padding-left: 32rpx;
  font-size: 24rpx;
  color: #6b7280;
}

.footer {
  margin-top: 40rpx;
  padding: 32rpx;
  text-align: center;
  background: linear-gradient(135deg, #faf5ff 0%, #f3e8ff 100%);
  border-radius: 16rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.policy-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 32rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.btn-back {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 44rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(139, 92, 246, 0.3);
}

.btn-back::after {
  border: none;
}
