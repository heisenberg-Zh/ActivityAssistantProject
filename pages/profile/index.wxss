/* pages/profile/index.wxss */
.profile-card {
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.profile-head { align-items: center; }

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 9999rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #8b5cf6 100%);
  color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
}

.profile-desc {
  background: linear-gradient(135deg, #f9fafb 0%, #f3f4f6 100%);
  border-radius: 20rpx;
  padding: 16rpx;
  border: 1rpx solid #e5e7eb;
}

/* 游客登录提示按钮 */
.login-prompt-btn {
  margin-top: 16rpx;
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  border-radius: 20rpx;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.35);
  transition: all 0.3s ease;
}

.login-prompt-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.25);
}

.login-prompt-icon {
  font-size: 36rpx;
  animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.1); opacity: 0.8; }
}

.login-prompt-text {
  flex: 1;
  font-size: 28rpx;
  font-weight: 600;
  color: #ffffff;
  letter-spacing: 1rpx;
}

.login-prompt-arrow {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  animation: slideRight 1.5s ease-in-out infinite;
}

@keyframes slideRight {
  0%, 100% { transform: translateX(0); }
  50% { transform: translateX(8rpx); }
}


.section-title { display: block; font-size: 32rpx; font-weight: 600; color: #111827; margin-bottom: 16rpx; }

.stats-card { padding: 24rpx; }

.stats-grid {
  display: flex;
  justify-content: space-between;
  gap: 16rpx;
}

.stats-item {
  text-align: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.stats-icon {
  width: 72rpx;
  height: 72rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.stats-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #111827;
}

.stats-label {
  font-size: 22rpx;
  color: #6b7280;
}

.menu-card { padding: 24rpx; }
.menu-list { display: flex; flex-direction: column; }

.menu-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 20rpx 0;
  border-top: 1px solid #f3f4f6;
  transition: all 0.2s ease;
}

.menu-item:first-child { border-top: none; }

.menu-item:active {
  opacity: 0.7;
}

.menu-icon {
  width: 64rpx;
  height: 64rpx;
  border-radius: 9999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-badge {
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #ffffff;
  border-radius: 9999rpx;
  padding: 4rpx 16rpx;
  font-size: 22rpx;
  margin-left: auto;
  box-shadow: 0 2rpx 8rpx rgba(239, 68, 68, 0.4);
}

.logout-btn {
  width: 100%;
  text-align: center;
  background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
  color: #ffffff;
  padding: 20rpx 0;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(239, 68, 68, 0.3);
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.98);
}

.icon-text { font-size: 28rpx; color: #4b5563; }

/* 帮助与反馈弹窗 */
.feedback-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.feedback-content {
  width: 100%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 24rpx;
  box-shadow: 0 12rpx 48rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.3s ease;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  box-sizing: border-box;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx;
  border-bottom: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #111827;
}

.feedback-close {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #9ca3af;
  border-radius: 50%;
  transition: all 0.2s ease;
  flex-shrink: 0;
}

.feedback-close:active {
  background: #f3f4f6;
  color: #4b5563;
}

.feedback-body {
  padding: 24rpx 32rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.feedback-hint {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.feedback-textarea {
  width: 100%;
  min-height: 240rpx;
  max-height: 400rpx;
  padding: 20rpx;
  background: #f9fafb;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #1f2937;
  line-height: 1.6;
  box-sizing: border-box;
  transition: all 0.2s ease;
}

.feedback-textarea:focus {
  background: #ffffff;
  border-color: #3b82f6;
}

.textarea-placeholder {
  color: #9ca3af;
  font-size: 28rpx;
}

.feedback-counter {
  display: block;
  text-align: right;
  font-size: 22rpx;
  color: #9ca3af;
  margin-top: 12rpx;
}

.feedback-footer {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx 32rpx;
  border-top: 1rpx solid #f3f4f6;
  flex-shrink: 0;
}

.feedback-btn {
  flex: 1;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 16rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  padding: 0;
  line-height: 1;
  transition: all 0.2s ease;
}

.feedback-btn::after {
  border: none; /* 移除 button 默认边框 */
}

.feedback-btn--cancel {
  background: #f3f4f6;
  color: #6b7280;
}

.feedback-btn--cancel:active {
  background: #e5e7eb;
}

.feedback-btn--submit {
  background: linear-gradient(135deg, #3b82f6 0%, #2563eb 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.3);
}

.feedback-btn--submit:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.25);
}