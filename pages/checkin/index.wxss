/* pages/checkin/index.wxss */

/* ===== 页面容器 ===== */
.page-container {
  min-height: 100vh;
  background: linear-gradient(180deg, #EFF6FF 0%, #F7F8FA 100%);
  padding-bottom: 120rpx;
}

.section {
  padding: 16rpx 24rpx;
}

.bottom-safe-area {
  height: 32rpx;
}

/* ===== 活动信息卡片 ===== */
.activity-header-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
}

.activity-title-row {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 24rpx;
  gap: 16rpx;
}

.activity-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: 600;
  color: #1F2937;
  line-height: 1.4;
}

.activity-status-badge {
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  font-weight: 500;
  white-space: nowrap;
}

.activity-status-badge.status-ongoing {
  background: #DCFCE7;
  color: #059669;
}

.activity-status-badge.status-finished {
  background: #F3F4F6;
  color: #6B7280;
}

.activity-status-badge.status-upcoming {
  background: #DBEAFE;
  color: #2563EB;
}

.activity-info-grid {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 12rpx 16rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
}

.info-icon {
  font-size: 32rpx;
  line-height: 1;
}

.info-text {
  font-size: 28rpx;
  color: #4B5563;
  line-height: 1.5;
}

/* ===== 签到状态卡片 ===== */
.checkin-status-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.06);
  text-align: center;
  position: relative;
  overflow: hidden;
}

.status-checked {
  background: linear-gradient(135deg, #ECFDF5 0%, #FFFFFF 100%);
}

.status-unchecked {
  background: linear-gradient(135deg, #FEF3C7 0%, #FFFFFF 100%);
}

.status-visual {
  position: relative;
  width: 180rpx;
  height: 180rpx;
  margin: 0 auto 32rpx auto;
}

.status-circle {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  font-weight: 600;
  position: relative;
  z-index: 2;
}

.circle-success {
  background: linear-gradient(135deg, #10B981 0%, #059669 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(16, 185, 129, 0.3);
}

.circle-pending {
  background: linear-gradient(135deg, #F59E0B 0%, #D97706 100%);
  color: #FFFFFF;
  box-shadow: 0 8rpx 32rpx rgba(245, 158, 11, 0.3);
}

.status-icon-text {
  line-height: 1;
}

.status-ripple {
  position: absolute;
  top: 0;
  left: 0;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  opacity: 0.3;
  animation: ripple 2s ease-out infinite;
}

.ripple-success {
  background: #10B981;
}

.ripple-pending {
  background: #F59E0B;
}

@keyframes ripple {
  0% {
    transform: scale(1);
    opacity: 0.3;
  }
  100% {
    transform: scale(1.5);
    opacity: 0;
  }
}

.status-title {
  font-size: 40rpx;
  font-weight: 600;
  color: #1F2937;
  margin-bottom: 12rpx;
  display: block;
}

.status-desc {
  font-size: 28rpx;
  color: #6B7280;
  line-height: 1.6;
  margin-bottom: 32rpx;
  display: block;
}

.checkin-time-badge {
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  background: #ECFDF5;
  border: 2rpx solid #10B981;
  border-radius: 32rpx;
}

.badge-icon {
  font-size: 28rpx;
  line-height: 1;
}

.badge-text {
  font-size: 28rpx;
  color: #059669;
  font-weight: 500;
}

.checkin-action-btn {
  width: 100%;
  max-width: 480rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(59, 130, 246, 0.3);
  border: none;
  margin: 0 auto;
}

.checkin-action-btn::after {
  border: none;
}

.btn-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

/* ===== 位置信息卡片 ===== */
.location-info-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
}

.location-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.location-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.location-status {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
}

.location-valid {
  background: #DCFCE7;
}

.location-invalid {
  background: #FEE2E2;
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.location-valid .status-dot {
  background: #059669;
}

.location-invalid .status-dot {
  background: #DC2626;
}

.status-text {
  font-size: 24rpx;
  font-weight: 500;
}

.location-valid .status-text {
  color: #059669;
}

.location-invalid .status-text {
  color: #DC2626;
}

.location-visual {
  background: linear-gradient(135deg, #EFF6FF 0%, #F9FAFB 100%);
  border-radius: 20rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
}

.location-target,
.location-current {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.target-icon,
.current-icon {
  width: 64rpx;
  height: 64rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.target-info,
.current-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.target-label,
.current-label {
  font-size: 24rpx;
  color: #9CA3AF;
}

.target-value,
.current-value {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 500;
}

.location-distance {
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.distance-line {
  width: 100%;
  height: 4rpx;
  border-radius: 2rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.line-valid {
  background: linear-gradient(90deg, #10B981 0%, #34D399 100%);
}

.line-invalid {
  background: linear-gradient(90deg, #EF4444 0%, #F87171 100%);
}

.distance-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.distance-text {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  padding: 6rpx 16rpx;
  background: #FFFFFF;
  border-radius: 16rpx;
  font-size: 24rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.line-valid ~ .distance-text {
  color: #059669;
}

.line-invalid ~ .distance-text {
  color: #DC2626;
}

.location-refresh-btn {
  width: 100%;
  height: 80rpx;
  background: #F3F4F6;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: none;
}

.location-refresh-btn::after {
  border: none;
}

.refresh-icon {
  font-size: 28rpx;
  line-height: 1;
}

.refresh-text {
  font-size: 28rpx;
  color: #4B5563;
  font-weight: 500;
}

/* ===== 签到记录卡片 ===== */
.records-card {
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.04);
}

.records-header {
  margin-bottom: 24rpx;
}

.records-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.records-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1F2937;
}

.records-count-badge {
  padding: 6rpx 16rpx;
  background: #EFF6FF;
  color: #2563EB;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.records-progress-bar {
  height: 8rpx;
  background: #E5E7EB;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #3B82F6 0%, #2563EB 100%);
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

.records-list {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  background: #F9FAFB;
  border-radius: 16rpx;
  transition: background 0.2s;
}

.record-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.record-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #E5E7EB;
  border: 3rpx solid #FFFFFF;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.record-user-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
}

.record-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.record-name {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 500;
}

.record-role-tag {
  padding: 4rpx 10rpx;
  background: #DBEAFE;
  color: #1E40AF;
  font-size: 22rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.record-time {
  font-size: 24rpx;
  color: #9CA3AF;
}

.record-status {
  padding: 8rpx 16rpx;
  border-radius: 32rpx;
  white-space: nowrap;
}

.status-done {
  background: #DCFCE7;
}

.status-waiting {
  background: #FEF3C7;
}

.status-badge-text {
  font-size: 24rpx;
  font-weight: 500;
}

.status-done .status-badge-text {
  color: #059669;
}

.status-waiting .status-badge-text {
  color: #D97706;
}

/* ===== 底部操作栏 ===== */
.fixed-bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #FFFFFF;
  border-top: 1rpx solid #E5E7EB;
  padding: 16rpx 24rpx;
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
  display: flex;
  gap: 16rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.04);
  z-index: 100;
}

.bottom-action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  border: none;
  font-weight: 500;
  transition: all 0.2s;
}

.bottom-action-btn::after {
  border: none;
}

.btn-secondary {
  background: #F3F4F6;
}

.btn-secondary .btn-icon {
  font-size: 32rpx;
}

.btn-secondary .btn-label {
  font-size: 28rpx;
  color: #4B5563;
}

.btn-primary {
  background: linear-gradient(135deg, #3B82F6 0%, #2563EB 100%);
  box-shadow: 0 4rpx 16rpx rgba(59, 130, 246, 0.25);
}

.btn-primary .btn-icon {
  font-size: 32rpx;
}

.btn-primary .btn-label {
  font-size: 28rpx;
  color: #FFFFFF;
}
