/* pages/registration/index.wxss */
.registration-card { overflow: hidden; }
.registration-banner { height: 160rpx; padding: 24rpx; border-radius: 24rpx 24rpx 0 0; display: flex; align-items: flex-end; }
.info-line { display: flex; align-items: flex-start; margin-bottom: 24rpx; }
.info-line:last-child { margin-bottom: 0; }
.info-icon { width: 72rpx; height: 72rpx; border-radius: 24rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; margin-right: 16rpx; }
.info-body { gap: 8rpx; flex: 1; }

.form-card { padding: 24rpx; }
.form-field { margin-bottom: 24rpx; }
.form-field:last-child { margin-bottom: 0; }
.field-label { display: block; font-size: 26rpx; color: #4b5563; margin-bottom: 12rpx; }
.field-input, .field-textarea { width: 100%; border: 1px solid #e5e7eb; border-radius: 20rpx; padding: 20rpx 24rpx; font-size: 28rpx; background: #f9fafb; box-sizing: border-box; }
.field-textarea { min-height: 160rpx; font-size: 26rpx; }

.ghost-btn { display: inline-flex; align-items: center; gap: 8rpx; padding: 12rpx 24rpx; border-radius: 9999rpx; background: rgba(59,130,246,0.12); color: #1d4ed8; font-size: 24rpx; }
.ghost-btn__icon { font-size: 24rpx; }

.notice-title { display: block; font-size: 28rpx; font-weight: 600; margin-bottom: 12rpx; }
.notice-text { font-size: 24rpx; line-height: 1.4; }
.notice-list { gap: 8rpx; }
.notice-item { font-size: 24rpx; color: #4b5563; }

.agreement { margin-top: 16rpx; color: #4b5563; }

.participant-card { padding: 24rpx; }
.participant-item { display: flex; align-items: center; justify-content: space-between; padding: 12rpx 0; }
.participant-avatar { width: 64rpx; height: 64rpx; border-radius: 20rpx; display: flex; align-items: center; justify-content: center; font-size: 28rpx; font-weight: 600; color: #ffffff; margin-right: 16rpx; }
.participant-info { gap: 4rpx; flex: 1; }

.fixed-footer { position: fixed; left: 0; right: 0; bottom: 0; background: #ffffff; border-top: 1px solid #e5e7eb; padding: 16rpx 24rpx; display: flex; gap: 16rpx; }
.footer-btn { flex: 1; }

.icon-text { font-size: 28rpx; color: #4b5563; }